@model CalculatorMVC.Models.CalculatorViewModel

@{
    ViewData["Title"] = "Calculator";
}
<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Calculate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserInput" class="control-label"></label>
                <input asp-for="UserInput" class="form-control" />
                <span asp-validation-for="UserInput" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CalculatedValue" class="control-label"></label>
                <input asp-for="@ViewData["CalculatedValue"]" class="form-control" />
                <span asp-validation-for="CalculatedValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
